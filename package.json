{
  "name": "swift-travel",
  "version": "1.0.0",
  "description": "AI-powered travel itinerary generator with multi-agent system",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:web\" \"npm run dev:functions\"",
    "dev:web": "npm run dev --workspace=apps/web",
    "dev:functions": "netlify dev --dir=apps/functions",
    "build": "npm run build --workspaces",
    "build:web": "npm run build --workspace=apps/web",
    "build:functions": "npm run build --workspace=apps/functions",
    "test": "npm run test --workspaces",
    "test:unit": "vitest run",
    "test:e2e": "playwright test",
    "test:functions": "npm run test --workspace=apps/functions",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write .",
    "prepare": "husky install",
    "deploy:preview": "netlify deploy --dir=apps/web/out",
    "deploy:prod": "netlify deploy --prod --dir=apps/web/out"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "concurrently": "^8.2.0",
    "eslint": "^8.45.0",
    "eslint-config-next": "^14.0.0",
    "eslint-config-prettier": "^9.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "netlify-cli": "^15.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "author": "Swift Travel Team",
  "license": "MIT"
}
